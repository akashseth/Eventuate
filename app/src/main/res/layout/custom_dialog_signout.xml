<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="150dp" android:background="@color/button_normal"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txt_signoutpermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Are you sure? You want to sign out?"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#555555"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_signout_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Yes"
            android:textSize="16sp"
            android:textColor="#555555"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/dialog_signout_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="No"
            android:textSize="16sp"
            android:textColor="#555555"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>