<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp" android:weightSum="2"
    android:paddingLeft="@dimen/activity_horizontal_margin"

   >

    <LinearLayout
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="5"
        android:gravity="center">

        <TextView
            android:id="@+id/bookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/bookingServiceProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Service Provider"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_weight="3"
            android:textAlignment="center"
           />

        <TextView
            android:id="@+id/bookingServiceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Type"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/bookingServiceSpecification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Service Specification"
            android:textAlignment="center"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Paid : Rs. "
                android:textSize="14sp"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Due  : Rs. "
                android:textSize="14sp"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/bookingAmountPaid"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Amount"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/bookingAmountDue"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Amount"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking status : "
            android:textColor="@color/colorAccent"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/booking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="waiting approval from provider"/>
    </LinearLayout>

</LinearLayout>